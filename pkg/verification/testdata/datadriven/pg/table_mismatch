# No PRIMARY KEY.

exec source_of_truth
CREATE TABLE t (id INT4 NOT NULL)
----
[pg] CREATE TABLE

exec non_source_of_truth
CREATE TABLE t (id INT4 PRIMARY KEY)
----
[crdb] CREATE TABLE

verify
----
{"level":"warn","culprit":"pg","table_schema":"public","table_name":"t","mismatch_info":"missing a PRIMARY KEY - results cannot be compared","message":"mismatching table definition"}

exec all
DROP TABLE t
----
[pg] DROP TABLE
[crdb] DROP TABLE

# Table mismatches on multiple axis.

exec source_of_truth
CREATE TABLE t (
    id INT8 PRIMARY KEY,
    t TEXT NULL,
    missing_in_lie_col JSONB,
    mismatching_type INT4
);
CREATE TABLE different_pk_type (
    id INT8 PRIMARY KEY
)
----
[pg] CREATE TABLE

exec non_source_of_truth
CREATE TABLE t (
    id INT8 NOT NULL,
    mismatching_pk INT8 PRIMARY KEY,
    t TEXT NULL NULL,
    extra_col JSONB,
    mismatching_type TEXT
);
CREATE TABLE different_pk_type (
    id FLOAT8 PRIMARY KEY
)
----
[crdb] CREATE TABLE

verify
----
{"level":"warn","culprit":"crdb","table_schema":"public","table_name":"different_pk_type","mismatch_info":"column type mismatch on id: pg=int8 vs crdb=float8","message":"mismatching table definition"}
{"level":"warn","culprit":"crdb","table_schema":"public","table_name":"different_pk_type","mismatch_info":"PRIMARY KEY does not match source of truth (columns and types must match)","message":"mismatching table definition"}
{"level":"warn","culprit":"crdb","table_schema":"public","table_name":"t","mismatch_info":"extraneous column mismatching_pk found","message":"mismatching table definition"}
{"level":"warn","culprit":"crdb","table_schema":"public","table_name":"t","mismatch_info":"extraneous column extra_col found","message":"mismatching table definition"}
{"level":"warn","culprit":"crdb","table_schema":"public","table_name":"t","mismatch_info":"column type mismatch on mismatching_type: pg=int4 vs crdb=text","message":"mismatching table definition"}
{"level":"warn","culprit":"crdb","table_schema":"public","table_name":"t","mismatch_info":"missing column missing_in_lie_col","message":"mismatching table definition"}
{"level":"warn","culprit":"crdb","table_schema":"public","table_name":"t","mismatch_info":"PRIMARY KEY does not match source of truth (columns and types must match)","message":"mismatching table definition"}
