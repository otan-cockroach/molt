# No PRIMARY KEY.

exec source
CREATE TABLE t (id INT4 NOT NULL)
----
[pg] CREATE TABLE

exec target
CREATE TABLE t (id INT4 PRIMARY KEY)
----
[crdb] CREATE TABLE

verify
----
{"level":"warn","table_schema":"public","table_name":"t","mismatch_info":"missing a PRIMARY KEY - results cannot be compared","message":"mismatching table definition"}

exec all
DROP TABLE t
